{% extends "base.html.twig" %}

{% block title%}
 Affichage du film : {{film.title}}
{%endblock%}

{% block main%}
    <table class="table table-striped table-bordered table-responsive">
        <tr>
            <th>ID</th>
            <th>title</th>
            <th>year</th>
            <th>type</th>
            <th>synopsis</th>
            <th>director</th>
            <th>deletedAt</th>
            <th>createdAt</th>
            <th>updatedAt</th>
        </tr>
        <tr>
            <td>{{ film.id }}</td>
            <td>{{ film.title }}</td>
            <td>{{ film.year }}</td>
            <td>{{ film.type }}</td>
            <td>{{ film.synopsis }}</td>
            <td>{{ film.director }}</td>
            <td>
                {% if film.deletedAt %}
                    {{ film.deletedAt|date("Y-m-d H:i:s") }}
                {% else %}
                    null
                {% endif %}
            </td>
            <td>{{ film.createdAt|date("Y-m-d H:i:s") }}</td>
            <td>{{ film.updatedAt|date("Y-m-d H:i:s") }}</td>
        </tr>
    </table>
{%endblock%}
